#!/usr/bin/osascript
on open location

	set findcmd to do shell script "mdfind kMDItemCFBundleIdentifier=com.oneidentity.scalus.macos | head -1"
	set cmdpath to findcmd & "/Contents/MacOS/scalus"
	set res to do shell script "test -f " & cmdpath & "; echo $?"
	set exitCode to res as number
	if (exitCode = 0)  then
		do shell script cmdpath & " info"
	else
		display dialog "scalus was not found in path:" & findpath
	end if
end open location
