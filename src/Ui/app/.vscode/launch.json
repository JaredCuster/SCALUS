    "version": "0.2.0",
    "compounds":
    [
        {
          "name": "Start Angular & Launch Chrome",
          "configurations": ["ng serve", "Launch Chrome against localhost"]
        },
    ],
    "configurations":
    [
        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        }
    ]
}